<% include ../blocks/adminheader.ejs %>
                    
<div class="tm-right-column">
<div class="tm-content-div">
    <section id="welcome" class="tm-section">
        <h1>Add New Member</h1>
        <br>
        <hr>

        <form action="/admin/add" method="POST">
            <input type="text" name="uname" placeholder="Member Name" class="form-control">
            <br>
            <input type="email" name="email" placeholder="Member Email" class="form-control">
            <br>
            <input type="password" name="pwd" placeholder="Member Password" class="form-control">
            <br>
            <select name="type" class="form-control">
                <option value=''>Select Type</option>
                <option value='faculty'>Faculty</option>
                <option value='student'>Student</option>
            </select>
            <br>
            <button type="submit" class="btn btn-success">Add Member</button>
        </form>
        

    </section>
    
