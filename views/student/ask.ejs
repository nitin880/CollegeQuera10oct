<% include ../blocks/studentheader.ejs %>

<div class="tm-right-column">
    <div class="tm-content-div">
    <section id="welcome" class="tm-section">

        <h2>Ask New Question           
        </h2><hr>
        <form action="/student/savequs" method="post">
            <textarea name="qus" cols="60" rows="3"></textarea>
            <br><br>
            <button type="submit">Send</button>
        </form>
        <hr>
        <h2>Old Questions</h2>
        <table class="table">
            <tr>
                <th>Question</th>
                <th>Date</th>
                <th>Answers</th>
            </tr>

            <% qus.forEach(rec=>
            { %>
                <tr>
                    <th><%=rec.qus%></th>
                    <th><%=rec.qdate%></th>
                    <th></th>
                </tr>
            <% })%>
        </table>


    </section></div></div>
